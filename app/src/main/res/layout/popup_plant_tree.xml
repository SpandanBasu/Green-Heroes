<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
   >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/close_dialog_plant_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        android:foregroundGravity="right"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:elevation="5dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/plant_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pic"
        app:civ_border_width="0dp"
        android:layout_gravity="center_horizontal"
        android:translationZ="10dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_plant_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/greenDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/tell_us_about_tree"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular_file"
                android:textSize="14sp"
                />


            <EditText
                android:id="@+id/plant_name"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular_file"
                android:textSize="16sp"
                android:hint="Tree Name"
                android:layout_marginVertical="8dp"
                style="@style/EditorFieldStyle3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:fontFamily="@font/poppins_regular_file"
                android:background="@drawable/button_shape"
                android:textColor="@color/white"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/complete_plant_tree_btn"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>
</RelativeLayout>